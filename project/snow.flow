{
    project: {
        name: 'snow',
        version : '1.0.0',

        lib : { },

        build: {
            post:{
                name: 'snow post build',
                script: 'hook.post.js',
                desc:'handles post snow build processing'
            }
        }
    },

    if:{
        "android": {
            build:{ 
                defines:['snow_dynamic_link'] 
            }
        },
        "!snow_dynamic_link" : {
            build:{
                defines: ['static_link'],
                hxcpp: {
                    flags:['-Dstatic_link']
                }
            }
        }
    }
}
